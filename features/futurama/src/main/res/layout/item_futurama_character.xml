<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Futurama character name"
        style="@style/Text.SubHeading.1"
        android:id="@+id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintTop_toBottomOf="@id/text_futurama_character_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/image_futurama_character"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/image_futurama_character"
        app:layout_constraintStart_toStartOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        tools:text="Gender :"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_gender_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/image_futurama_character"
        app:layout_constraintStart_toEndOf="@id/text_futurama_character_gender_label"
        app:layout_constraintEnd_toEndOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        tools:text="Male"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text_futurama_character_gender"
        app:layout_constraintStart_toStartOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        tools:text="Species :"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_species_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text_futurama_character_gender"
        app:layout_constraintStart_toEndOf="@id/text_futurama_character_species_label"
        app:layout_constraintEnd_toEndOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        android:layout_marginStart="@dimen/spacing_small"
        tools:text="Human"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_species"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text_futurama_character_species"
        app:layout_constraintStart_toStartOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        tools:text="Occupation :"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_occupation_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text_futurama_character_species"
        app:layout_constraintStart_toEndOf="@id/text_futurama_character_occupation_label"
        app:layout_constraintEnd_toEndOf="@id/text_futurama_character_name"
        android:layout_marginVertical="@dimen/spacing_x_small"
        android:layout_marginStart="@dimen/spacing_small"
        tools:text="Intergalactic Delivery Boy"
        style="@style/Text.Label.1.Secondary"
        android:id="@+id/text_futurama_character_occupation"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>